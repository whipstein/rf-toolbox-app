{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rf-toolbox-app",
  "version": "0.2.0",
  "identifier": "com.rf-toolbox-app.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RF Toolbox",
        "width": 300,
        "height": 300,
        "resizable": true,
        "fullscreen": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
